
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.web.WebView?>
<GridPane fx:id="gridPane"
          fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml"
          alignment="center"
          hgap="10"
          vgap="10"
          stylesheets="@styles.css">

    <Button text="Open..."
            GridPane.rowIndex="0"
            GridPane.columnIndex="0"
            onAction="#handleClick"
    />

    <Button text="Button 2"
            GridPane.rowIndex="0"
            GridPane.columnIndex="1"
    />

    <Button text="Button 3"
            GridPane.rowIndex="0"
            GridPane.columnIndex="2"
            id="buttonThree"
    />

    <Button text="Button 4"
            GridPane.rowIndex="0"
            GridPane.columnIndex="3"
            fx:id="button4"
    />

    <Button text="Button 5"
            GridPane.rowIndex="0"
            GridPane.columnIndex="4"
    />

    <RadioButton text="Choice 1" GridPane.rowIndex="1" GridPane.columnIndex="0"/>

    <Label text="JavaFX Effects"
           GridPane.rowIndex="1"
           GridPane.columnIndex="1"
           fx:id="label"
           onMouseEntered="#handleMouseEnter"
           onMouseExited="#handleMouseExit"
    />

    <Hyperlink text="www.javafx.com"
               GridPane.rowIndex="2"
               GridPane.columnIndex="0"
               onAction="#handleLinkClick"
    />

    <WebView fx:id="webview"
             GridPane.rowIndex="4"
             GridPane.columnIndex="0"
             GridPane.rowSpan="5"
             GridPane.columnSpan="3"
    />

</GridPane>