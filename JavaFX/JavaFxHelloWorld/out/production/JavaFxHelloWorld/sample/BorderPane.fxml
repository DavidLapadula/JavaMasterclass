<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="sample.Controller">
    <top>
        <Label BorderPane.alignment="CENTER" text="This label is in the top position"/>
    </top>

    <left>
        <Label text="This label is in the left position" alignment="CENTER"/>
    </left>

    <center>
        <Label text="This label is in the center position and has a lot of text in this center position" alignment="CENTER"/>
    </center>

    <right>
        <Label text="This label is in the right position" alignment="CENTER"/>
    </right>

    <bottom>
        <HBox alignment="top_right" spacing="10">
            <padding>
                <Insets bottom="10" right="10" />
            </padding>
            <Button text="Okay" prefWidth="100"/>
            <Button text="Cancel" prefWidth="100"/>
            <Button text="Help " prefWidth="100"/>
        </HBox>
    </bottom>
</BorderPane>
